---
import Layout from '../layouts/Layout.astro';
import Card from '../components/CardTarifario.astro';
import Header from '../components/Header.astro';
import Player from '../components/Player.astro';
import '@fontsource-variable/big-shoulders-inline-text';
---

<Layout title="Radio 10 | Contacto.">
	<main class="h-screen flex flex-col justify-between"  transition:animate="fade">

		<header>
			<Header/>
		</header>

        <section class="container mx-auto">
            <div>
                <h2 class="text-white text-6xl font-extrabold text-center fuente-especial leading-[7rem]">Contacto</h2>
                <p class="text-center text-white font-bold">Si tienes algunas dudas o quieres enviar un mensaje, no dudes en escribirnos</p>
            </div>
            <div class="my-8">
                <p class="text-white font-bold text-3xl">Teléfonos</p>
                <div class="grid grid-cols-3 gap-5 mt-5">
                    <div>
                        <p class="text-white font-bold">Estudios</p>
                        <p class="text-white text-6xl font-bold">07 2301025</p>
                    </div>
                    <div>
                        <p class="text-white font-bold">Oficinas</p>
                        <p class="text-white text-6xl font-bold">07 2301022</p>
                    </div>
                    <div>
                        <p class="text-white font-bold">WhatsApp</p>
                        <p class="text-white text-6xl font-bold">0968598251</p>
                    </div>
                </div>
            </div>

            <div>
                <p class="text-white">Dirección: Zamora Chinchipe, Yantzaza, Av. Iván Riofrío <br>
                    entre 13 de abril y Geranios, 2do. Piso</p>
            </div>

            <p class="text-white mt-5 font-bold">E-mail: info@radio10.ec</p>


        </section>




		  <section transition:persist="media-player" >
			<Player />
		</section>

	</main>
</Layout>


<style>
	main{
		background-image: url(../img/1.jpg);
		background-position: center;
		background-size: cover;
		background-repeat: no-repeat;
	}

	.fuente-especial{
		font-family: 'Big Shoulders Inline Text Variable', system-ui;
	}
</style>
